<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sale_order_view_inherit" model="ir.ui.view">
			<field name="name">sale.order.view.inherit.custom</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='note']" position="after">
					<field name="description"/>		
				</xpath>
				<xpath expr="//field[@name='payment_term_id']" position="after">
					<field name="payment_mode"/>		
				</xpath>
				<xpath expr="//field[@name='payment_mode']" position="before">
					<field name="delivery_desc"/>		
				</xpath>
				<xpath expr="//field[@name='delivery_desc']" position="after">
					<field name="invoice_desc"/>		
				</xpath>
				<xpath expr="//field[@name='invoice_desc']" position="after">
					<field name="project_desc"/>		
				</xpath> 
				<xpath expr="//field[@name='project_desc']" position="after">
					<field name="purchase_desc"/>		
				</xpath>
				<xpath expr="//field[@name='purchase_desc']" position="after">
					<field name="Manufacturing_desc"/>		
				</xpath>
				 <xpath expr="//notebook/page/field[@name='order_line'] /tree/field[@name='product_id']" position="after">
					<field name="order_lines"/>
				</xpath>
				<xpath expr="//notebook/page/field[@name='order_line'] /tree/field[@name='product_id']" position="after">
					<field name="weight_done"/>
				</xpath>
				<xpath expr="//notebook/page/field[@name='order_line'] /tree/field[@name='weight_done']" position="after">
					<field name="weight"/>
				</xpath>
		   	<xpath expr="//field[@name='partner_shipping_id']" position="after">
					<field name="display_delivery_address"/>		
				</xpath> 

			</field>
		</record>

		<record id="stock_view_inherit" model="ir.ui.view">
			<field name="name">stock.picking.view.inherit.custom</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="in_delivery_desc"/>
					<field name="invoice"/>	
				</xpath>

				</field>
			</record>


		<record id="invoice_view_inherit" model="ir.ui.view">
			<field name="name">account.move.view.inherit.custom</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="in_invoice_desc"/>		
				</xpath>

				</field>
			</record>


		<record id="project_project_extend" model="ir.ui.view">
    	    <field name="name">project.project.extended</field>
        	<field name="model">project.project</field>
        	<field name="inherit_id" ref="project.edit_project"/>
        	<field name="arch" type="xml">
            	<field name="user_id" position="after">
                	<field name="project_desc"/>
            	</field>
        	</field>
    	</record>        

		<record id="task_view_inherit" model="ir.ui.view">
			<field name="name">project.task.view.inherit.custom</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_form2"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='tag_ids']" position="after">
					<field name="project_desc"/>		
				</xpath>

				</field>
			</record>

		<record id="purchase_view_inherit" model="ir.ui.view">
			<field name="name">purchase.order.view.inherit.custom</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='currency_id']" position="after">
					<field name="purchase_desc"/>		
				</xpath>

				</field>
			</record>
			

		<record id="manufacturing_view_inherit" model="ir.ui.view">
			<field name="name">manufacturing.order.view.inherit.custom</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='company_id']" position="after">
					<field name="Manufacturing_desc"/>		
				</xpath>
				</field>
			</record>


		<record id="pdoduct_template_view_inherit" model="ir.ui.view">
			<field name="name">product.template.view.inherit.custom</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='purchase_ok']" position="before">
					<field name="weight_done"/>	
					<label for="weight_done"/>
				</xpath>
				

				</field>
			</record>

		<record id="stock_move_view_inherit" model="ir.ui.view">
			<field name="name">stock.picking.view.inherit.custom</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
			<xpath expr="//form/sheet/notebook/page/field[@name='move_ids_without_package'] /tree/field[@name='product_id']" position="after">
					<field name="weight"/>
				</xpath>

				</field>
			</record>

		<record id="stock_picking_type_view_inherit" model="ir.ui.view">
			<field name="name">sstock.picking.type.view.inherit.custom</field>
			<field name="model">stock.picking.type</field>
			<field name="inherit_id" ref="stock.view_picking_type_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='show_operations']" position="after">
					<field name="invoice"/>
				</xpath>

				</field>
			</record>


		<record id="product_view_inherit" model="ir.ui.view">
			<field name="name">product.product.view.inherit.custom</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view"/>
			<field name="arch" type="xml">
			<xpath expr="//form/sheet/notebook/page[@name='inventory']" position="after">
     				<page string="Sale Order">
     					<field name="sale_order_ids"/>
     				</page>
			</xpath> 
			<xpath expr="//form/sheet/notebook/page[@name='general_information']" position="after">
     				<page string="purchase Order">
     					<field name="purchase_order_ids"/>
     				</page>
			</xpath> 
			</field>
			</record>


		<record id="res_partner_view_inherit" model="ir.ui.view">
			<field name="name">res.partner.view.inherit.custom</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat']" position="after">
					<field name="display_delivery_address"/>
				</xpath>

				</field>
			</record>
	</data>
</odoo>








