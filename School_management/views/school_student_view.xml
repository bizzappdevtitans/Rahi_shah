<!-- Student list view -->
    <record id="School_management_tree" model="ir.ui.view">
    <field name="name">School.Student.tree</field>
    <field name="model">school.student</field>
    <field name="arch" type="xml">
          
            <tree>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="Email" widget="email"/>
                    <field name="birth"/>
                    <field name="address"/>
                    <field name="result" widget="percentage"/>
                    <field name="city" widget="boolean_toggle"/>
                    <field name="grade"/>
                
            </tree>
    </field>
</record>

 <!--form view  for Student-->

    <record id="School_management_form" model="ir.ui.view">
    <field name="name">School.Student.form</field>
    <field name="model">school.student</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="%(action_view_student_grade_wizard)d" title="Student Grade" type="action"
                    string="Student Grade"/>
            </header>
            <sheet>
                <div class="oe_title">
               <h1>
                      <field name="sequence" readonly="1"/>
                </h1>
             </div>
                <header>
                    <button class="oe_stat_button" type="object" name="get_result" icon="fa-star" string="Result">
                        </button>
                        <field string="Result" name="result_count" widget="statinfo" />
                    </header>

              
                <group string="Student">
                    <group>
                    <field name="name" groups="School_management.group_school_student" />
                    <field name="Email" widget="email"/>
                    <field name="birth"/>
                    <field name="Gender" widget="radio"/>
                    <field name="Age"/>
                </group>
                    <group>
                    <field name="address"/>
                    <field name="Hobby" widget="emoji_char"/>
                    <field name="result" widget="percentage"/>
                    <field name="city" widget="boolean_toggle"/>
                    <field name="photo" widget="image" width="90px"/>
                    <field name="birthday_wish" />
                </group>
                <group>
                    <field name="result_list_ids"/>
                </group>
                </group>
                 <notebook>
                    <page string="Any Query">
                        <field name="query"/>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
</record>

<!-- Kanban view for student -->

<record id="student_kanban" model="ir.ui.view">
    <field name="name">School.student.kanban</field>
    <field name="model">school.student</field>
    <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban">
                    <field name="name"/>
                    <field name="Email"/>
                    <field name="birth" />
                    <field name="Gender" widget="radio"/>
                    <field name="Age"/>
                    <field name="address"/>
                    <field name="Hobby" widget="emoji_char"/>
                    <field name="result" widget="percentage"/>
                    <field name="city" widget="boolean_toggle"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click"> 

                       <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    </strong>
                                <div t-if="record.Email.value">
                                        <t t-esc="record.Email.value"/>
                                </div>
                            </div>
                        </div>
                    
                    </t>
                </templates>
            </kanban>
        </field>
</record>

