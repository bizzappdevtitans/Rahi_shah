<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_view_student_grade_wizard" model="ir.actions.act_window">
            <field name="name">Student Grade</field>
            <field name="res_model">student.grade.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>

    </record> 

      <record id="action_update_student_grade" model="ir.actions.act_window">
            <field name="name">Student Grade</field>
            <field name="res_model">student.grade.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>

    </record> 

    <record id="student_wizard_grade_view" model="ir.ui.view">
        <field name="name">Student Grade View</field>
        <field name="model">student.grade.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="student_ids" widget="many2many_list"/>
                    <field name="grade"/>
                </group>
                <footer>
                    <button name="set_student_grade" string="Create Grade" class="oe_right oe_highlight"
                            type="object"/>
                    <button name="action_update_student_grade" string="Update Grade" class="oe_right oe_highlight"
                            type="object"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>