<?xml version="1.0" encoding="utf-8"?> 
 <odoo>
    <data noupdate="1">
        <record id="room_booking_mail_template" model="mail.template">
            <field name="name">Room Booking </field>
            <field name="model_id" ref="Hotel_Management.model_room_reservation"/>
            <field name="email_from">hotel@gmail.com</field>
            <field name="email_to">{{object.email}}</field>
            <field name="subject">Room Booking Reminder</field>
            <field name="body_html" type="html">
                <p>
                Dear <t t-out="object.guest_name.name"/>
                <br/>
                <br/>
                This is a reminder about your Room Booking on <t t-out="object.check_in"/>
                <br/>
                <br/>
                Thank You
                </p>
            </field>
        </record> 
    </data>
</odoo> 

