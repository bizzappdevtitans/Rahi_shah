<?xml version="1.0" encoding="utf-8"?>
<odoo>


<record id="restaurant_booking_form_action" model="ir.actions.act_window">
            <field name="name">Restaurant</field>
            <field name="res_model">restaurant.booking</field>
            <field name="view_mode">tree,form</field>
    </record>

<record id="room_booking_form_action" model="ir.actions.act_window">
            <field name="name">Reservation</field>
            <field name="res_model">room.reservation</field>
            <field name="view_mode">tree,form,kanban</field>
    </record>
<record id="feedback_form_action" model="ir.actions.act_window">
            <field name="name">Feedback</field>
            <field name="res_model">hotel.feedback</field>
            <field name="view_mode">tree,form</field>
    </record>

	<!-- Form view of Restaurant Booking -->
	
    <record id="restaurant_booking_form" model="ir.ui.view">
    <field name="name">restaurant.booking.form</field>
    <field name="model">restaurant.booking</field>
    <field name="arch" type="xml">
    <widget name="web_ribbon" text="submit" bg_color="bg-success" />
        <form>
            <header>
                <button name="button_confirm" class="oe_highlight" state="confirm" string="Confirm" 
                    type="object" help="Confirm state"/>
                <button name="button_cancel" class="oe_highlight" state="cancel" string="Cancel" 
                    type="object" help="cancel state" />
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,,cancel"/>
            </header>
            <sheet>
                <group>
                    <field name="booking_no"/>
                    <field name="guest_name"/>
                    <field name="booking_date"/>
                    <field name="room_no"/>
                </group>
                <notebook>
                <page string="Table Information">
                 <group>
                    <field name="table_booking_list_ids"/>
                 </group>
                </page>
                <page string="Food Order">
                <group>
                    <field name="food_servive_ids"/>
                </group>
                </page>
            </notebook>
           </sheet>
        </form>
    </field>
</record>

<!-- Tree view for table Booking -->

    <record id="restaurant_booking_tree" model="ir.ui.view">
    <field name="name">restaurant.booking.tree</field>
    <field name="model">restaurant.booking</field>
    <field name="arch" type="xml">
        <tree>
                <field name="booking_no"/>
                <field name="guest_name"/>
                <field name="booking_date"/>
                <field name="room_no"/>
                <field name="state"/>
        </tree>
    </field>
</record>

<!-- Form view of Room Reservation -->

<record id="room_booking_form" model="ir.ui.view">
    <field name="name">room.reservation.form</field>
    <field name="model">room.reservation</field>
    <field name="arch" type="xml">
        <form>
            <header>
                    <button
                        name="%(sale.action_view_sale_advance_payment_inv)d"
                        string="Create Invoice"
                        type="action"
                        class="btn-primary"
                    />
                <button name="button_done" class="oe_highlight" state="done" string="Done" 
                    type="object" help="Done state" />
                <button name="button_confirm" class="oe_highlight" state="confirm" string="Confirm" 
                    type="object" help="Confirm state"  />
                <button name="button_cancel" class="oe_highlight" state="cancel" string="Cancel" 
                    type="object" help="cancel state" />
                <field name="reservation_state" widget="statusbar" statusbar_visible="draft,done,confirm,,cancel"/>
                <button name="action_send_report" type="object" string="Send By Email" class="or_highlight"/> 
           
            </header>
            <sheet>
                   <button class="oe_stat_button" type="object" name="get_reservation" icon="fa-star" string="Booking" style="background:lightblue"/>
                <group>
                    <group>
                  
                    <field name="room_booking"/>
                    <field name="guest_name"/>
                    <field name="gender"/>
                    <field name="address"/>
                    <field name="email" widget="email"/>
                    <field name="num_person"/>
                </group>
                <group>
                    <field name="phone" widget="phone" />
                    <field name="check_in" />
                    <field name="check_out" />
                    <field name="stay"/>
                    <field name="identity_proof" widget="file"/>
                    <field string="Room Booking" name="room_count" widget="statinfo" />
                </group>
                <notebook>
                <page string="Room Information">
                 <group>
                    <field name="room_type_ids"/>
                 </group>
             </page>
             <page string="Trasport Service">
                 <group>
                    <field name="trasport_service_ids"/>
                 </group>
             </page>
            <page string="Laundry Service">
                 <group>
                    <field name="laundry_service_ids"/>
                 </group>
             </page>
            <page string="Amenity">
                 <group>
                    <field name="room_amenity_ids"/>
                 </group>
             </page>
         </notebook>
        </group>
            </sheet>
         <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
</record>


<!-- Tree view for Room Booking -->

    <record id="room_booking_tree" model="ir.ui.view">
    <field name="name">room.reservation.tree</field>
    <field name="model">room.reservation</field>
    <field name="arch" type="xml">
        <tree>
                <field name="room_booking"/>
                <field name="guest_name"/>
                <field name="phone"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="reservation_state"
                        decoration-success="reservation_state == 'confirm'"
                        decoration-info="reservation_state == 'done'"
                        decoration-warning="reservation_state == 'draft'"
                        decoration-danger="reservation_state == 'cancel'"
                        widget="badge"
                        />

        </tree>
    </field>
</record>

<!-- search view for Room Booking -->

<record id="Hotel_room_booking_search" model="ir.ui.view">
        <field name="name">room.reservation.search</field>
        <field name="model">room.reservation</field>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="room_booking"/>
                <field name="guest_name"/>
                <field name="reservation_state"/>
                <filter string="Archived" name="guest_name" domain="[('guest_name', '=',False)]"/>
                 <group expand="0" string="Group By">
                    <filter string="Reservation state" name="reservation_state" context="{'group_by': 'reservation_state'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Kanban view for Room Booking -->

<record id="student_kanban" model="ir.ui.view">
    <field name="name">room.reservation.kanban</field>
    <field name="model">room.reservation</field>
    <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban">
                <field name="room_booking"/>
                <field name="guest_name"/>
                <field name="phone"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="reservation_state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click"> 

                       <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="guest_name"/>
                                    </strong>
                                  <div t-if="record.check_in.value">
                                        <t t-esc="record.check_in.value"/>
                                </div>
                                <div t-if="record.check_out.value">
                                        <t t-esc="record.check_out.value"/>
                                </div>
                            </div>
                        </div>
                    
                    </t>
                </templates>
           
            </kanban>
         </field>
</record>
<!-- Form view for Feedback -->

<record id="feedback_form" model="ir.ui.view">
    <field name="name">hotel.feedback.form</field>
    <field name="model">hotel.feedback</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="guest_name"/>
                    <field name="rating" widget="Priority" />
                    <field name="suggestion"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<!--  -->
<record id="feedback_tree" model="ir.ui.view">
    <field name="name">hotel.feedback.tree</field>
    <field name="model">hotel.feedback</field>
    <field name="arch" type="xml">
        <tree>
            <field name="guest_name"/>
            <field name="rating"/>
            <field name="suggestion"/>
        </tree>
    </field>
</record>


</odoo>