    <!-- Form view of Transport service  -->

    <record id="transport_service_form" model="ir.ui.view">
    <field name="name">transport.service.form</field>
    <field name="model">transport.service</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_send_whatsapp" icon="fa-whatsapp" type="object" string="Whatsapp" />
            </header>
            <sheet>
                <group>
                	<group>
                		<field name="trans_sequence" readonly="1"/>
                    	<field name="pick_up_date"/>
                    	<field name="guest_name"/>
                    </group>
                    <group>
                      	<field name="no_adult"/>
                    	<field name="no_child"/>
                        <field name="phone" widget="phone"/>
                    </group>
              	<notebook>
                <page string="Picking Details" >
             		<group>
                        <field name="pickup_required"/>
                        <field name="pick_up_date"/>
                        <field name="pickup_time"/>
                        <field name="destination"/>
                    </group>
                    <group>
                    	<field name="pickup_location" />
                    	<field name="is_chargable" readonly="1" />
                    	<field name="Trasport_mode"/>
                    </group>
            	</page>
            </notebook>
           </group>
          </sheet>
        </form>
    </field>
</record> 

<!-- Tree view of Transport service -->

    <record id="transport_service_tree" model="ir.ui.view">
    <field name="name">transport.service.tree</field>
    <field name="model">transport.service</field>
    <field name="arch" type="xml">
        <tree>
            <field name="trans_sequence"/>
            <field name="pick_up_date"/>
            <field name="guest_name"/>
        </tree>
    </field>
</record>

<!-- Form view of laundry service -->

    <record id="laundry_service_form" model="ir.ui.view">
    <field name="name">laundry.service.form</field>
    <field name="model">laundry.service</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <header>
                    <button class="oe_stat_button" type="object" name="get_laundry_service" icon="fa-list-ul" string="Laundry">   
                    </button>
                    <field string="Services" name="laundry_service_count" widget="statinfo"/> 
                </header>
                <group>
                <group>
                    <field name="order_reference"/>
                    <field name="request_date"/>
                </group>
                <group>
                    <field name="shop_name"/>
                    <field name="request_deadline"/>
                  
                </group>
                <notebook>
                <page string="Room Information">
                 <group>
                    <field name="guest_name"/>
                    <field name="room_no"/>
                 </group>
                </page>
                <page string="Laundry Service Product">
                    <group>
                        <field name="laundry_list_ids"/>
                    </group>
                </page>
            </notebook>
            </group>
            </sheet>
        </form>
    </field>
</record>

